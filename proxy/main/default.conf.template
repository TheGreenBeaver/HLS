map $http_upgrade $connection_upgrade {
  default Upgrade;
  ''      close;
}

server {
  listen 80;
  listen 443 ssl http2;
  listen [::]:80;
  listen [::]:443 ssl http2;

  ssl on;
  server_tokens off;
  server_name ${SRV_NAME};

  ssl_certificate /usr/share/nginx/cert/live/${SRV_NAME}/fullchain.pem;
  ssl_certificate_key /usr/share/nginx/cert/live/${SRV_NAME}/privkey.pem;

  location / {
    root /usr/share/nginx/fe;
    index index.html index.htm;
    try_files $uri $uri/ /index.html;
  }

  location /media {
    autoindex on;
    alias /usr/share/nginx/media;
  }

  location /ws {
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection $connection_upgrade;
    proxy_set_header Host $host;

    proxy_pass http://insight-application:${INTERNAL_PORT};
  }
}
